<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  
  <link rel="stylesheet" href="/css/bootstrap.css">
  <script src="/js/jquery.js"></script>
  <script src="/js/poper.js"></script>
  <script src="/js/bootstrap.js"></script>

  <link rel="icon" type="image/x-icon" href="/icon/icon-cinema.ico">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/choose-schedule.css">
  <title>NAMCINEMA | <%- i18n.t('header.chooseSchedule') %></title>
</head>
<body>
  <%- include('./header') %>

  <div class="modal fade my-0 mx-auto" id="modalConfirmChooseSchedule" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable">
      <div class="modal-content">
        <div class="modal-header d-flex">
          <h2 class="modal-title mx-auto" id="modalLabel"><span></span></h2>
          <button type="button" class="close ml-0 close-video-modal" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <h3 class="text-center mb-3">Chú voi con ở bản Đôn</h3>
          <table class="table">
            <thead>
              <tr>
                <th scope="col"><%- i18n.t('schedule.dateShow') %></th>
                <th scope="col"><%- i18n.t('schedule.timeShow') %></th>
                <th scope="col"><%- i18n.t('schedule.numberOfEmptySeats') %></th>
              </tr>
            </thead>
            <tbody></tbody>
          </table>
        </div>
        <div class="modal-footer d-flex">
          <button type="button" class="btn btn-success btn-ok m-auto" data-dismiss="modal"><%- i18n.t('form.ok') %></button>
        </div>
      </div>
    </div>
  </div>
  <button type="button" class="d-none btn btn-primary btn-confirm-schedule" data-toggle="modal" data-target="#modalConfirmChooseSchedule" data-whatever="@getbootstrap"></button>
  
  <div class="container main-content">
    <br><br>
    <h1 class="text-center"><%- i18n.t('header.chooseSchedule') %></h1>
    <br>
  </div>

  <br><br>
  <%- include('./footer') %>

  <script src="/js/utils.js"></script>
  <script src="/js/pagination.js"></script>
  <script src="/js/lazyloading.js"></script>
  <script src="/js/sweetalert.js"></script>
  <script src="/js/nodata.js"></script>
  <script src="/js/choose-schedule.js"></script>
</body>
</html>
