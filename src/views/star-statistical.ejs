<div class="star-statistical mr-5">
  <div class="star-average">
    <span><%- movie.averageStar %></span>
    <i class="fa-solid fa-star"></i>
    <div class="total-review">(<%- movie.totalReview %> <%- i18n.t('movie.reviews') %>)</div>
  </div>
  <div class="star-statistical-detail">
    <% for (let i = 5; i >= 1; i--) { %>
      <div class="star-statistical-detail-row">
        <% for (let j = 1; j <= i; j++) { %>
          <i class="fa-solid fa-star star-active"></i>
        <% } %>
        <% for (let j = 1; j <= 5 - i; j++) { %>
          <i class="fa-solid fa-star star-inactive"></i>
        <% } %>
        <div class="progress" style="height: 8px;">
          <div class="progress-bar progress-bar-striped bg-info" role="progressbar" style="width: <%- movie[`star${i}`] ? +movie[`star${i}`] / movie.totalReview * 100 : 0 %>%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
        <div class="text-secondary"><%- movie[`star${i}`] ? movie[`star${i}`] : 0 %></div>
      </div>
    <% } %>
  </div>
</div>
